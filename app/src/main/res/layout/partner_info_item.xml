<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <EditText
        android:id="@+id/partnerAnswer"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fields_background"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/partnerQuestion"
        app:layout_constraintStart_toStartOf="@+id/partnerQuestion"
        app:layout_constraintTop_toBottomOf="@+id/partnerQuestion" />

    <TextView
        android:id="@+id/partnerQuestion"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:text="please enter NIC number"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.tiper.MaterialSpinner
        android:id="@+id/partnerAnswers"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textColor="#000000"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/partnerQuestion"
        app:layout_constraintStart_toStartOf="@+id/partnerQuestion"
        app:layout_constraintTop_toBottomOf="@+id/partnerQuestion"
        app:layout_constraintVertical_bias="0.0" />

    <EditText
        android:id="@+id/remarks"
        android:layout_width="0dp"
        android:layout_height="35dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/fields_background"
        android:ems="10"
        android:hint="REMARKS"
        android:inputType="textPersonName"
        android:padding="5dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/partnerAnswers"
        app:layout_constraintStart_toStartOf="@+id/partnerAnswers"
        app:layout_constraintTop_toBottomOf="@+id/partnerAnswers" />
</androidx.constraintlayout.widget.ConstraintLayout>